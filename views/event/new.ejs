<%- include('../partials/header.ejs')%>
    <form action = '/events' method = 'POST' class="new-form">


        
        <label for="title">Title</label>
        <input type="text" id="title" name="title">

        <label for="category">Category:</label>
        <select id="category" name="category">
            <option value="Casual">Casual Event</option>
            <option value="Competitive">Competitive Event</option>
        </select>

        <label for="content">Content</label>
        <textarea rows="5" id="content" name="content" class = "fixed-width"></textarea>

        <label for="location">Where:</label>
    <select id="location" name="location" required>
        <option value="Main Gaming Lounge">Main Gaming Lounge</option>
        <option value="Room 1">Room 1</option>
        <option value="Room 2">Room 2</option>
        <option value="Room 3">Room 3</option>
    </select>

        <label for="start">Start Date/Time:</label>
        <input type="datetime-local" id="start" name="start" required>

        <label for="end">End Date/Time:</label>
        <input type="datetime-local" id="end" name="end" required>

        <label>Select Image:</label>
    <div class="image-options">
        <input type="radio" id="image1" name="image" value="RocketLeaguelogo.jpg" required>
        <label for="image1"><img src="/images/RocketLeaguelogo.jpg" alt="Image 1" class="scaled-image"> </label>

        <input type="radio" id="image2" name="image" value="CallofDuty.jpg" required>
        <label for="image2"><img src="/images/CallofDuty.jpg" alt="Image 2" class="scaled-image"> </label>

        <input type="radio" id="image3" name="image" value="LeagueofLegends.jpg" required>
        <label for="image3"><img src="/images/LeagueofLegends.jpg" alt="Image 3" class="scaled-image"> </label>

        <input type="radio" id="image4" name="image" value="RainbowSixSiege.jpg" required>
        <label for="image4"><img src="/images/RainbowSixSiege.jpg" alt="Image 4" class="scaled-image"> </label>

        <input type="radio" id="image5" name="image" value="SuperSmashBrosUltimate.jpg" required>
        <label for="image5"><img src="/images/SuperSmashBrosUltimate.jpg" alt="Image 5" class="scaled-image"> </label>

        <input type="radio" id="image6" name="image" value="Valorant.jpg" required>
        <label for="image6"><img src="/images/Valorant.jpg" alt="Image 6" class="scaled-image"> </label>

    </div>
        
        <input type="submit" value="Submit">   
    </form>

    
    <%- include('../partials/footer.ejs')%>